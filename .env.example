# Google Earth Engine Configuration
# Path to your service account JSON file
GOOGLE_SERVICE_ACCOUNT_PATH=./service-account.json
# Optional: inline JSON credentials (overrides the path)
# GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account",...}
# Optional: explicitly set the EE project (falls back to service-account project_id)
# GOOGLE_EE_PROJECT=your-project-id
# Optional: custom scopes (comma separated) if you need to restrict/extend defaults
# GOOGLE_EE_SCOPES=https://www.googleapis.com/auth/earthengine,https://www.googleapis.com/auth/devstorage.read_write

# Server Configuration
PORT=3000

# Optional: Google Cloud Storage for exports
GCS_BUCKET_NAME=your-bucket-name
# Optional: bucket por defecto para reportes automáticos
# REPORTS_GCS_BUCKET=your-report-bucket

# Scheduler de distribución de reportes
# REPORTS_DISTRIBUTION_ENABLED=true
# REPORTS_DISTRIBUTION_TOKEN=cambia-este-token
# REPORTS_DISTRIBUTION_TZ=America/Lima
# REPORTS_DISTRIBUTION_RUN_ON_BOOT=false
# REPORT_DISTRIBUTION_CONFIG=./config/report-distribution.json
# REPORTS_SLACK_WEBHOOK=https://hooks.slack.com/services/XXX/YYY/ZZZ

# Notificaciones
# SENDGRID_API_KEY=sg.xxxxxx
# REPORTS_EMAIL_FROM=reports@municipio.gob.pe
# REPORTS_EMAIL_NAME=Observatorio EcoPlan
# REPORTS_EMAIL_SUBJECT_PREFIX=[EcoPlan]